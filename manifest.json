{
    "manifest_version": 3,
    "name": "Kwiz - Autocomplete Quiz using AI",
    "version": "1.0",
    "description": "Extension to interact with OpenAI API to auto complete quiz",
    "action": {
        "default_popup": "src/static/popup.html",
        "default_icon": {
            "16": "src/images/icon16.png",
            "48": "src/images/icon48.png",
            "128": "src/images/icon128.png"
        }
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "icons": {
        "16": "src/images/icon16.png",
        "48": "src/images/icon48.png",
        "128": "src/images/icon128.png"
    }
}